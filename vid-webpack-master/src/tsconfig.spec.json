{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "types": [
      "jasmine",
      "node",
      "jest"
    ]
  },
  "paths": {
    "@angular/*" : [
      "../node_modules/@angular/*"
    ],
    "rxjs/*" : [
      "../node_modules/rxjs/*"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
