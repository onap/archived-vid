<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>assembly-for-war</id>

	<fileSets>
		<fileSet>
			<includes>
				<include>vid.war</include>
			</includes>
			<directory>../epsdk-app-onap/target/</directory>
			<outputDirectory>artifacts</outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>*.sh</include>
			</includes>
			<directory>src/main/scripts</directory>
			<outputDirectory>scripts</outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>server.xml</include>
			</includes>
			<directory>../epsdk-app-onap/src/main/resources</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>org.onap.vid.jks</include>
				<include>org.onap.vid.trust.jks</include>
			</includes>
			<directory>../epsdk-app-onap/src/main/webapp/WEB-INF/cert</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>onap.features.properties</include>
			</includes>
			<directory>../vid-app-common/src/main/webapp/WEB-INF/conf</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
	</fileSets>
	
</assembly>
